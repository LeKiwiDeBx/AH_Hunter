{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "Build application",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-std=c++14",
                "${file}",
                "${fileDirname}/view.cpp",
                "-o",
                "${workspaceFolder}/aHH",
                "-ljsoncpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run application",
            "type": "shell",
            "linux": {
                "command": "cd ${workspaceFolder} | ./aHH"
            },
            "group": "none",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}